@model IEnumerable<PurchaseManagementSystem.Models.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Item</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Item Name")
            </th>
            <th>
                @Html.DisplayName("Item Status")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.item_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.item_status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.item_id" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.item_id" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.item_id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
