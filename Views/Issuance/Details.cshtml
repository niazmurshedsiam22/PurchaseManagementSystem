@model PurchaseManagementSystem.Models.Issuance

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Issuance</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Issuance Date")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.iss_date)
        </dd>
        <dt>
            @Html.DisplayName("Employee Name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.emp_name)
        </dd>
        <dt>
            @Html.DisplayName("Quantity")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.qnty)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.iss_id" class="btn btn-success">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
